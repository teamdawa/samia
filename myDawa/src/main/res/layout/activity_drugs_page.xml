<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffde00"
        android:padding="20dip"
        tools:context="com.jesi.apps.mydawa.DrugPageActivity"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" >

        <TextView
            android:id="@+id/lblAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="48dp"
            android:text="Age"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblAge"
            android:layout_alignBottom="@+id/lblAge"
            android:layout_toRightOf="@+id/lblPregnant"
            android:background="@drawable/search_background"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/lblWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/lblAge"
            android:layout_below="@+id/txtAge"
            android:layout_marginTop="36dp"
            android:text="Weight"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblWeight"
            android:layout_alignBottom="@+id/lblWeight"
            android:layout_alignLeft="@+id/txtAge"
            android:background="@drawable/search_background"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >
        </EditText>

        <TextView
            android:id="@+id/lblGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lblWeight"
            android:layout_below="@+id/txtWeight"
            android:layout_marginTop="42dp"
            android:text="Gender"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioGroup
            android:id="@+id/grpGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtWeight"
            android:layout_alignTop="@+id/lblGender" >

            <RadioButton
                android:id="@+id/rdnMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/rdnFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />
        </RadioGroup>

        <TextView
            android:id="@+id/lblPregnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lblGender"
            android:layout_below="@+id/grpGender"
            android:layout_marginTop="22dp"
            android:text="Pregnant"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioGroup
            android:id="@+id/grpPreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/grpGender"
            android:layout_alignTop="@+id/lblPregnant" >

            <RadioButton
                android:id="@+id/rdnPregYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rdnPregNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/grpGender"
            android:layout_below="@+id/grpPreg"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_background"
            android:text="Ok" />

    </RelativeLayout>

</ScrollView>